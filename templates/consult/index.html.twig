{% block body %}
    <style>
        .example-wrapper { padding: 0.5rem 0.5rem; margin: 3em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <!-- Navbar content -->
    </nav>

    <section class='analyses'>
        <div class="example-wrapper">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Num Analyse</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Type</th>
                        <th scope="col">Date</th>
                        <th scope="col">Actions</th> {# Added Actions column #}
                    </tr>
                </thead>
                <tbody>
                    {% for analyse in analyses %}
                        <tr class="table-active">
                            <th scope="row">{{ analyse.numanalyse }}</th>
                            <td>{{ analyse.nom }}</td>
                            <td>{{ analyse.type }}</td>
<td>{{ analyse.date|date('Y-m-d H:i:s') }}</td>
                            <td>
                                <a  href="{{ path('edit_analyse', {'id': analyse.id}) }}" class="btn btn-primary">Edit</a> {# Edit button #}
                                <form method="post" action="{{ path('delete_analyse', {'id': analyse.id}) }}" onsubmit="return confirm('Are you sure you want to delete this analyse?')">
            <button type="submit">Delete</button>
        </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

